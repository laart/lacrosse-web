<% content_for :body do %>
  <%=raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>
<% end %>

<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">

      <%= render '/refinery/content_page' %>
      <hr>

        <div class="row">

          <div class="col-md-8">

            <header class="single-post-header clearfix">
              <h2 class="post-title">Jauno spēlētāju pieteikuma forma</h2>
            </header>

            <div class="post-content">

              <div class="row">

               <%= form_for [refinery, :new_player_inquiries, @new_player_inquiry], :html => {:id => 'new-player-form'} do |f| %>
                <%= render '/refinery/admin/error_messages',
                           :object => @new_player_inquiry,
                           :include_object_name => true  %>

                  <div class="col-md-12 margin-15">

                    <div class="row">
                      <div class="col-md-6">
                        <%= f.label 'Vārds' %>
                        <%= f.text_field :name, class: "form-control", placeholder: "Vārds" %>
                      </div>

                      <div class="col-md-6">
                        <%= f.label 'Uzvārds' %>
                        <%= f.text_field :surname, class: "form-control", placeholder: "Uzvārds" %>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-md-2">
                        <%= f.label 'Vecums' %>
                        <%= f.number_field :age, class: "form-control input-align-center" %>
                      </div>

                      <div class="col-md-4">
                        <%= f.label 'Telefona nummurs' %>
                        <%= f.phone_field :phone, class: "form-control", placeholder: "Telefona nummurs" %>
                      </div>

                      <div class="col-md-6">
                        <%= f.label 'E-pasts' %>
                        <%= f.email_field :email, class: "form-control", placeholder: "E-pasts" %>
                      </div>
                    </div>

                    <div class="form-group">
                      <%= f.label 'Jūsu pieredze sportā' %>
                      <%= f.text_area :experience, :cols => 6, :rows => 8, class: "form-control", placeholder: "Lūdzu īsi aprakstiet savu pieredzi sportā" %>
                    </div>

                    <div class="col-md-12">
                      <%= f.submit 'Nosūtīt', class: "btn btn-primary btn-lg pull-right" %>
                    </div>

                  </div>

              <% end %>  
              </div>
            </div>
        </div>

        <div class="col-md-4 sidebar">

          <header class="single-post-header clearfix">
            <div class="widget sidebar-widget">
              <div class="sidebar-widget-title">
                <h3>Mūsu komanda</h3>
              </div>

              <div class="format-link">
                <%= link_to image_tag("team.jpg"), refinery.players_players_path, class: "media-box" %>
              </div>

            </div>
          </header>

        </div>

      </div>
    </div>
  </div>
</div>


