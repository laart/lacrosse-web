<% content_for :body_content_title do %>
  <%= @achievement.tournament %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Tournament</h1>
    <p>
      <%=raw @achievement.tournament %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%=raw @achievement.country %>
    </p>
  </section>
  <section>
    <h1>Place</h1>
    <p>
      <%=raw @achievement.place %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @achievement.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="achievements">
      <% @achievements.each do |achievement| %>
        <li>
          <%= link_to achievement.tournament, refinery.achievements_achievement_path(achievement) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
