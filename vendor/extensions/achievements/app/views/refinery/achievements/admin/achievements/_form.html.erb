<%= form_for [refinery, :achievements_admin, @achievement] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @achievement,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :tournament -%>
    <%= f.text_field :tournament, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :place -%>
    <%= f.number_field :place, class: "text-field-small" -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.date_select :date -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "achievements/achievement" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.achievements.admin.achievements.achievement'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @achievement.tournament) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
