<%= form_for [refinery, :managers_admin, @manager] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @manager,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :surname -%>
    <%= f.text_field :surname -%>
  </div>

  <div class='field'>
    <%= f.label :position -%>
    <%= f.text_field :position -%>
  </div>

  <div class='field'>
    <%= f.label :telephone_number -%>
    +371 <%= f.number_field :telephone_number -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :in_contatcs -%>
    <%= f.check_box :in_contatcs, :checked => @manager[:in_contatcs] -%>
  </div>

  <div class='page_part' id='photo'>
    <div class='field'>
      <%= f.label :photo -%>
      <%= render '/refinery/admin/image_picker',
                 :f => f,
                 :field => :photo_id,
                 :image => @manager.photo,
                 :toggle_image_display => false -%>
    </div>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.managers.admin.managers.manager'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @manager.name) -%>
<% end -%>
