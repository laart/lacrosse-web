<div class="main" role="main">
  <div id="content" class="content full">
    <div class="container">
      <div class="row">
        <ul class="isotope-grid" data-sort-id="gallery">

			    <% @galleries.each do |gallery| %>
			      <li class="col-md-4 col-sm-4 grid-item post format-gallery">
			      	<h3 class="gallery-title"><%= gallery.title %></h3>
			      	<div class="grid-item-inner">
			      		<div class="media-box">
			      			<div class="flexslider" data-autoplay="yes" data-arrows="yes">
			      				<ul class="slides">

			      					<% gallery.images.each do |image| %>
	      								<li class="item">
	      									<%= link_to image_tag(image.thumbnail(geometry: "600x400#c").url), 
	                  			image.url, "data-rel" => "prettyPhoto[#{gallery.id}]", class: "media-box" %>
	                  		</li>
                  		<% end %>

                  	</ul>
                	</div>
                </div>
			        </div>
				      <span class="gallery-created-at"><i class="fa fa-calendar"></i> 
				        <%= l(gallery.created_at.to_date, :format => :long) %>
				      </span> 
			      </li>

			    <% end %>

				</ul>
			</div>
		</div>
	</div>
</div>

