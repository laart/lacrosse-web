<%= form_for [refinery, :events_admin, @event] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @event,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :starttime -%>
    <%= f.datetime_select :starttime -%>
  </div>

  <div class='field'>
    <%= f.label :endtime -%>
    <%= f.datetime_select :endtime -%>
  </div>

  <div class='field'>
    <%= f.label :all_day -%>
    <%=f.check_box :all_day %>
  </div>

  <div class="field">
    <%= f.select :event_type, options_for_select(Refinery::Events::Event::EVENT_TYPES) %>
  </div>

  <div class='field'>
    <%= f.label :important -%>
    <%=f.check_box :important %>
  </div>


  <!-- Repeating Event -->

  <div class="field">
    <%= label_tag 'Repeating event?' %>
    <%= check_box_tag 'repeating event' %>
  </div>

  <div id="repeating-event-container">
    <div class='field'>
      <%= f.label :repeating_event_title -%>
      <%= f.text_field :repeating_event_title -%>
    </div>

    <div class="field">
      <%= f.select :period, Refinery::Events::Event::REPEATS %>
    </div>

    <div class="field">
      <%=f.select :frequency, (1..30).to_a %>
    </div>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "events/event" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.events.admin.events.event'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @event.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
