<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax" style="background-image:url(<%= asset_path("article-background-small.jpg") %>);">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">

            <li><%= link_to t("breadcrumb"), refinery.root_path %></li>
            <% [@page.ancestors, @page].flatten.collect do |p| %>
              <li class="active"><%= link_to p.title, p.url %></li>
            <% end %>

        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header --> 
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">

      <% if current_page?(refinery.galleries_galleries_path(:locale => :lv) || refinery.galleries_galleries_path(:locale => :en)) %>
        <div class="col-md-6">
          <h1><%= @page.title %></h1>
        </div>
        <div class="col-md-6">
          <div class="gallery-filter">
            <ul class="nav nav-pills sort-source" data-sort-id="gallery" data-option-key="filter">
              <li data-option-value=".format-gallery" class="active"><a href="#"><i class="fa fa-camera"></i>
                <span><%= t('galleries') %></span></a></li>
              <li data-option-value=".format-video"><a href="#"><i class="fa fa-play"></i> <span><%= t('videos') %></span></a></li>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="col-md-12">
          <h1><%= @page.title %></h1>
        </div>
      <% end %>

    </div>
  </div>
</div>
<!-- End Page Header --> 