<!-- Start Nav Backed Header -->
<div class="nav-backed-header parallax" style="background-image:url(<%= asset_path("article-background-small.jpg") %>);">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ol class="breadcrumb">

            <li><%= link_to 'Home', refinery.root_path %></li>
            <% [@page.ancestors, @page].flatten.collect do |p| %>
              <li class="active"><%= link_to p.title, p.url %></li>
            <% end %>

        </ol>
      </div>
    </div>
  </div>
</div>
<!-- End Nav Backed Header --> 
<!-- Start Page Header -->
<div class="page-header">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1><%= @page.title %></h1>
      </div>
    </div>
  </div>
</div>
<!-- End Page Header --> 